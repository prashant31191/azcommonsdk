<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prashant311.azrefresh">

    <!--for the internet access-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--for the get wifi mac id and ssid-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!--for the getting location-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--for the device lock handel-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="336684a672860d50a11e523f666fbee2d44cf069" />
        <activity
            android:name="com.prashant311.azrefresh.ActAdsInterstitial"
            android:label="@string/title_activity_act_ads_interstitial"></activity>
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>
</manifest>